<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.carto.gismap.android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="22" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_180"
        android:label="@string/app_name" >
        <activity
            android:name="com.carto.gismap.LauncherList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.carto.gismap.OGROverlayActivity" />
        <activity android:name="com.carto.gismap.GDALOverlayActivity" />
        <activity android:name="com.carto.gismap.BasicEditableOverlayActivity" />
        <activity android:name="com.carto.gismap.EditableLocalOverlayActivity" />
        <activity android:name="com.carto.gismap.EditableOGROverlayActivity" />
        <activity android:name="com.carto.gismap.MapInfoOverlayActivity" />
        <activity android:name="com.carto.filepicker.FilePicker" />
    </application>

</manifest>